---
interface Props {
  date: Date;
}

const { date } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric'
});
---

<div class="group relative border-l border-zinc-200 pl-4 dark:border-zinc-700">
  <div class="absolute -left-1.5 top-2 h-3 w-3 rounded-full border border-zinc-200 bg-white transition-colors group-hover:border-zinc-400 dark:border-zinc-700 dark:bg-zinc-900 dark:group-hover:border-zinc-500"></div>
  <time class="block text-sm text-zinc-500 dark:text-zinc-400">
    {formattedDate}
  </time>
  <div class="mt-2 text-zinc-800 dark:text-zinc-200 pb-4">
    <slot />
  </div>
</div>
